                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/tab12"
                        android:layout_width="79dp"
                        android:layout_height="83dp" />

                    <ImageView
                        android:id="@+id/tab13"
