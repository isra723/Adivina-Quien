                        android:id="@+id/tab7"
                        android:layout_width="79dp"
                        android:layout_height="83dp" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/tab8"
                        android:layout_width="79dp"
                        android:layout_height="83dp" />

                    <ImageView
